{
  "name": "wavecho",
  "version": "0.1.0",
  "description": "Wavecho - 基于大模型的矛盾复盘与沟通辅助应用",
  "private": true,
  "scripts": {
    "db:start": "docker-compose up -d",
    "db:stop": "docker-compose down",
    "db:reset": "docker-compose down -v && docker-compose up -d",
    "db:logs": "docker-compose logs -f mongodb",
    "backend:install": "cd backend && uv sync",
    "backend:dev": "cd backend && uv run uvicorn app.main:app --reload --host 0.0.0.0 --port 8000",
    "backend:test": "cd backend && uv run pytest",
    "frontend:install": "cd frontend && npm install",
    "frontend:dev": "cd frontend && npm start",
    "frontend:ios": "cd frontend && npm run ios",
    "frontend:android": "cd frontend && npm run android",
    "dev": "concurrently -n \"db,backend\" -c \"blue,green\" \"npm run db:start\" \"npm run backend:dev\"",
    "dev:backend": "concurrently -n \"db,backend\" -c \"blue,green\" \"npm run db:start\" \"npm run backend:dev\"",
    "install:all": "npm run backend:install && npm run frontend:install",
    "docs": "echo Swagger Docs: http://localhost:8000/docs && echo ReDoc: http://localhost:8000/redoc",
    "clean": "npm run db:stop && cd backend && rm -rf .pytest_cache __pycache__"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "keywords": [
    "wavecho",
    "ai",
    "relationship",
    "communication",
    "fastapi",
    "react-native"
  ],
  "author": "Wavecho Team",
  "license": "MIT",
  "packageManager": "yarn@4.11.0+sha512.4e54aeace9141df2f0177c266b05ec50dc044638157dae128c471ba65994ac802122d7ab35bcd9e81641228b7dcf24867d28e750e0bcae8a05277d600008ad54"
}
